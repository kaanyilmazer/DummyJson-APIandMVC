@using DummyShop.Service.ViewModel;
@model ProductViewModel

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddProduct", "AdminProduct", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.title,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.rating,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.brand,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.thumbnail,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.category,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        @Html.TextBoxFor(x=>x.price,new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x=>x.description,6,4,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "AdminProduct", null, new { @class = "btn btn-danger" })
                </form>
            </div>
        </div>
    </div>
}
